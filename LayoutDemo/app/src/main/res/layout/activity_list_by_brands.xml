<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_by_brands"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mypc.layoutdemo.activity.ListByBrands">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/header"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toyota" />

        <TextView
            android:id="@+id/articleCnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="19,528 tin rao" />

        <TextView
            android:id="@+id/locationFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toàn quốc" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvArticlesByBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
