<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textBase">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="textHeader" parent="textBase">
        <item name="android:textSize">40dp</item>
    </style>
    <style name="textNormal" parent="textBase">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="searchConditions">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>
    <style name="btnSearch">
        <item name="android:background">@android:color/holo_green_dark</item>
    </style>
    <style name="btn_green">
        <item name="android:background">@android:color/holo_green_light</item>
    </style>
    <style name="btn_blue">
        <item name="android:background">@android:color/holo_blue_bright</item>
    </style>
    <style name="txtBlue" parent="textBase">
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>
    <style name="txtGreen" parent="textBase">
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>
    <style name="striped_row">
        <item name="android:background">#c3d6f4</item>
    </style>

</resources>
